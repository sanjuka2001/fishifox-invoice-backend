# Environment Variables for Fishifox Backend

# Application
PORT=3001
NODE_ENV=development

# Database
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=postgres
DB_PASSWORD=your_password
DB_DATABASE=fishifox

# JWT
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=7d

# Vault Encryption
VAULT_SECRET=your-vault-encryption-key-32-chars

# SMTP Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
SMTP_FROM="Fishifox <noreply@fishifox.com>"

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:3000
